<div class="row">
  <div class="col-lg-12">
    <h1><%= @room.name %></h1>
    <dl>
      <dt>相談内容</dt>
      <dd style="margin:0px 0px 10px 20px"><%= @room.content %></dd>
      <dt>
      <%= link_to '編集', edit_room_path(@room), class: "btn btn-default" %>
      <%= link_to '戻る', rooms_path, class: "btn btn-default" %>

        <div class="row">
          <div class="col-lg-12">
            <h2>返答履歴</h2>
            <% @comments.each do |comment| %>
              <p>
                <%= comment.body %>
                <%= link_to "削除する", comment_path(comment), method: :delete %>
              </p>
            <% end %>
          </div>
        </div>
      </dt>
    </dl>

    <!-- comment投稿フォーム -->
    <%= form_with model: @comment, url: { controller: :comments, action: :create }, local: true do |form| %>
      <div class="form-group">
        <%= form.label :body , '返答' %><br>
        <%= form.text_area :body, class: "form-control" %>
      </div>
      <%= form.hidden_field :room_id, value: @room.id %>
      <%= form.hidden_field :user_id, value: current_user.id %>
      <%= form.submit class: "btn btn-default" %>
    <% end %>

  </div>
</div>
